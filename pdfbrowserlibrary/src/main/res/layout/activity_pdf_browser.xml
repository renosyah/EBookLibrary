<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pdfBrowserActivity.PdfBrowserActivity">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresActivityGridViewPdfFile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:visibility="gone">

        <GridView
                android:id="@+id/ActivityGridViewPdfFile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="false"
                android:columnWidth="140dp"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="5dp">

        </GridView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/DataKosongTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text_empty"
            android:visibility="visible"/>

    </FrameLayout>
</LinearLayout>